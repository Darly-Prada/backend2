<h1>Lista de Productos</h1>

<!-- carrito de Compras -->
<div class="cartContainer">
  <h2 class="cartH2">Tu Carrito</h2>
  <ul id="cartList">
    {{#each cart.products}}
      <li class="list">
        {{this.productId.title}} - {{this.quantity}} - <button class="removeFromCartBtn" data-id="{{this.productId._id}}">Eliminar</button>
      </li>
    {{/each}}
  </ul>
  
  <!-- Botón para vaciar el carrito -->
  <button class="emptyCartBtn btn">Vaciar Carrito</button>
  <!-- Botón para comprar productos -->
  <button class="buyButton btn">Comprar mis Productos</button>
</div>

<div class="container">
  <!-- Formulario para agregar producto -->
  <form id="productForm">
    <input type="text" id="productTitle" placeholder="Nombre del producto" required>
    <input type="number" id="productPrice" placeholder="Precio" required>
    <input type="text" id="productDescription" placeholder="Descripción" required>
    <input type="text" id="productCategory" placeholder="Categoría" required>
    <input type="text" id="productCode" placeholder="Código" required>
    <input type="number" id="productStock" placeholder="Stock" required>
    <button type="submit">Agregar Producto</button>
  </form>
<!-- Lista de productos -->
  <ul id="productList">
    {{#each products}}
      <li id="product-{{this._id}}">
        {{this.title}} - ${{this.price}} - {{this.description}} - {{this.category}} - {{this.code}} - {{this.stock}}
        <button class="deleteBtn" data-id="{{this._id}}">Eliminar</button>
        <button class="addToCartBtn" data-id="{{this._id}}">Agregar al carrito</button>
      </li>
    {{/each}}
  </ul>
</div> 
 
<script src="/static/js/home.js"></script>